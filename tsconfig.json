    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "incremental": true,
        "isolatedModules": true
    },
    "include": ["src/", "eslint.config.mjs"],
    "exclude": ["dist/"]
}
