{
    "name": "gpt-bot",
    "private": true,
    "version": "0.0.1",
    "type": "module",
    "scripts": {
        "build": "tsc",
        "deploy-cmd": "tsc && cd dist && node deploy-commands.js",
        "start": "tsc && cd dist && node .",
        "prettify": "prettier --write . --plugin-search-dir=. --ignore-unknown",
        "pm2": "pm2 start \"pnpm start\"",
        "lint": "eslint --cache . --fix",
        "format": "pnpm lint && pnpm prettify",
        "prepare": "husky install"
    },
    "dependencies": {
        "chatgpt": "^2.0.0",
        "delay": "^5.0.0",
        "discord.js": "^14.7.1",
        "discord.js-components": "^14.0.3-fix",
        "node-fetch": "^3.3.0",
        "openai": "^3.1.0"
    },
    "devDependencies": {
        "@types/node": "^18.11.11",
        "@typescript-eslint/eslint-plugin": "^5.45.1",
        "@typescript-eslint/parser": "^5.45.1",
        "eslint": "^8.29.0",
        "eslint-config-prettier": "^8.5.0",
        "husky": "^8.0.2",
        "lint-staged": "^13.1.0",
        "prettier": "^2.8.0",
        "typescript": "^4.9.3"
    },
    "lint-staged": {
        "*.{ts,json,yaml,yml}": "prettier --plugin-search-dir=. --ignore-unknown --write",
        "*.ts": "eslint --cache --fix"
    }
}
